article.law
  .law-container
    height 580px
    margin-bottom 22px
    overflow hidden
    padding 12px
    border-radius 6px
    background #ecf0f1
    header
      small
        background #ecf0f1
        display block
        height 42px
        line-height 42px
        padding-left 12px
        border-top-left-radius 6px
        border-top-right-radius 6px
        img
          border-radius 100px
          float right
          margin-right 12px
          margin-top 5px
          width 32px
    img.picture
      width 100%
      height 164px
    h1
      margin 10px 0
      a
        font-size 22px
        color black
    .options
      .inner-container
        padding 0
        .vote-box
          padding 0
          background #ecf0f1
        h5
          display none
        .vote-option
          display block
          width 100%
        .votes-cast
          display none
        .meta-data
          margin-top 20px