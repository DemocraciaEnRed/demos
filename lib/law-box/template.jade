- var positives = law.upvotes || []
- var negatives = law.downvotes || []
- var neutrals = law.abstentions || []
- var census = neutrals.concat(negatives).concat(positives) || []
- var voted = citizen && ~census.indexOf(citizen.id)

article.law.col-xs-10.col-xs-offset-1.col-sm-6.col-sm-offset-0.col-md-4.col-lg-3
  .law-container
    header
      small(style='background:#{law.backgroundColor}; color: #{law.fontColor}')
        span.visible-lg-inline Presentado por
        strong  #{law.author}
        img(src=law.authorUrl)
      img.picture(src=law.picture, title=law.mediaTitle)
      h1: a(href='/law/#{law.id}')=law.mediaTitle
    - var limit = voted ? 320 : 140
    section.summary=truncate(law.summary.replace("<br>", "\n"), limit, '...')
    .options