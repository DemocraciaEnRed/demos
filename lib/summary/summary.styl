#summary-container
  font-family: 'Raleway', sans-serif
  font-kerning: normal

  h1, h4
    text-align center

  h1
    text-transform uppercase
    font-size: 2em

  h4
    margin: 0
    line-height: 1

  .bill-proposal
    font-size 10px
    .actions
      display none

  .share-links
    margin-top 20px
    margin-bottom 40px
    display flex
    align-items center
    a
      background #00708f
      padding 10px
      margin-right 10px
      border-radius 3px
      color white
      display inline-block
      line-height 10px
      -webkit-transition all 0.3s ease
      &:hover
        color white
        text-decoration none
      &.facebook:hover
        background #3b5998
      &.twitter:hover
        background #3498db
      &.google-plus:hover
        background #c0392b

  .share-message
    color #00708f
    font-weight bold
    margin-left -3%

  .share-message.hidden-sm.hidden-md.hidden-lg
    margin-top 20px

  .link-to-law
    cursor pointer
