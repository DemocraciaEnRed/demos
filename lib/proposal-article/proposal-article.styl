/* Vars
-------------------------------------------------- */
border_radius = 3px
/* Law view
-------------------------------------------------- */
article.proposal
  background #e7ecee
  padding 22px
  overflow hidden

  header
    width 100%
    overflow hidden
    .title
      border-radius 6px
      margin-bottom 22px
      padding 12px
      text-align center
      text-transform uppercase

  .author
    color #666
    display table
    font-size 16px
    font-weight normal
    margin auto
    margin-bottom 22px
    overflow hidden
    a
      display block
      float left
      img
        border-radius 100px
        margin-right 12px
        max-width 64px
        max-height 64px
    .text
      float left
      span
        display block
        height 32px
        line-height 32px

  a:hover
    color #428bca
    text-decoration underline

  img
    max-width 100%
    margin-bottom 12px

  .entry-tag
    font-weight bold
    font-size 11px
    text-transform uppercase
    text-align center
    position absolute
    left -140px
    width 100px
    top 44px
    img
      width 40px
      height 40px
      left 30px
      top 20px
      position absolute

    .hexagon
      width 80px
      height 80px

  .entry-content
    font-family "freight-sans-pro",sans-serif

  .summary
    font-size 110%
    font-family "Helvetica Neue",Helvetica,Arial,sans-serif
    margin-bottom 22px

  .clauses
    p.clause
      img
        width:100%
  h1
    margin-top 0
    margin-bottom 30px

  .meta-information
    margin-bottom 10px
    opacity .6
    color black
    .icon-time
      margin-right 6px
      color #666
    .meta-timeago, .meta-timeago-label
      display inline-block
    .meta-item
      color:black
    .label
      margin-right:10px
      display:inline-block
      border-radius:0

  hr
    border-top 4px solid #eee
    width 50%

  .read-more
    display block
    text-transform capitalize
    margin-top 10px
    margin-bottom 20px
  .footer-notes
    color #666
    margin-bottom 20px

  .participants
    font-weight bold
    padding 10px 0
    margin 30px 0
    border-top 2px solid #f1f1f1
    border-bottom 2px solid #f1f1f1
    .participant-profile
      margin-left 10px
      display inline-block
      img
        width 30px
        height 30px
    .view-more
      background #f1f1f1
      padding 2px 10px
      color #333
      margin-left 6px
      margin-top 2px
      display inline-block
      border-radius border_radius

  .source
    p
      span.glyphicon
        font-size 12px
        margin-right 5px
      a
        font-size 16px
        color #333
        font-weight bold

  .links
    background-color #ecf0f1
    padding 6px 12px
    p
      margin 0
      margin-bottom 5px
      padding-left 12px
      span.glyphicon
        font-size 12px
        margin-right 5px
      a
        font-size 14px
        color #428bca
        font-weight bold

  .share-links
    margin-bottom 40px
    a
      background #ccc
      padding 10px
      margin-right 10px
      border-radius border_radius
      color white
      display inline-block
      line-height 10px
      -webkit-transition all 0.3s ease
      &:hover
        text-decoration none
      &.facebook:hover
        background #3b5998
      &.twitter:hover
        background #3498db
      &.google-plus:hover
        background #c0392b
