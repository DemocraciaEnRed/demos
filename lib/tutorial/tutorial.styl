.btn-prev, .btn-next
  cursor pointer
  position absolute
  top 125px
  z-index 1
  width 40px
  height 50px
  opacity .05
  transition all 0.7s ease
  &:hover
    opacity .5
    transition all 0.7s ease

.btn-prev
  left 50px
  background url('/lib/tutorial/images/prev.svg') no-repeat

.btn-next
  right 50px
  background url('/lib/tutorial/images/next.svg') no-repeat

